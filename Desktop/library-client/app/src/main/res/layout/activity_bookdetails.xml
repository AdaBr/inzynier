<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar2">

        <TextView
            android:id="@+id/text_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="TextView"
            android:layout_below="@+id/text_title"
            android:layout_alignStart="@+id/text_title" />

        <ImageView
            android:id="@+id/image_book"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:contentDescription=""
            android:layout_marginStart="33dp"
            android:layout_alignTop="@+id/text_title"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            android:text="TextView"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_book" />


        <TextView
            android:id="@+id/text_isbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/text_author" />

        <TextView
            android:id="@+id/text_dio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignBottom="@+id/image_book"
            android:layout_alignStart="@+id/text_isbn"
            android:layout_marginBottom="14dp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="TextView"
        android:layout_below="@+id/relativeLayout" />


    <Button
        android:id="@+id/button_favorite"
        android:layout_width="205dp"
        android:layout_height="60dp"
        android:text="Add to favorite"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/button_downladed"
        android:layout_width="205dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Download" />


</RelativeLayout>